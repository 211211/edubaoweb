{
  "extends": [
    "tslint:recommended",
    "tslint:latest",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "src/stories/**",
      "src/legacy/**",
      "src/serviceWorker.ts",
      "src/setupTests.ts"
    ]
  },
  "rules": {
    "max-line-length": {
      "options": [80]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-implicit-dependencies": false,
    "no-relative-imports": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [80]
    }
  }
}
